{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "declarationDir": "lib",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@app/*": ["src/app/*"],
      "@root/*": ["src/*"],
      "@config": ["src/config/config.json"],
      "@logger": ["src/logger.ts"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src/**/*"]
}
